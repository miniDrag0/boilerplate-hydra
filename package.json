{
  "name": "boilerplate-hydra",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "wdio run wdio.conf.js",
    "mutasi.bca": "wdio run ./config/wdio.mutasi.bca.conf.js",
    "obfuscate": "node Obfuscation.js",
    "build": "npm run obfuscate && electron-builder"
  },
  "build": {
    "asar": false,
    "appId": "com.hydra.boilerplate",
    "productName": "Hydra Boilerplate",
    "directories": {
      "app": "dist-obfuscated",
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "extraResources": [
      {
        "from": "scrcpy/",
        "to": "scrcpy/"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/register": "^7.28.3",
    "@wdio/appium-service": "^9.21.0",
    "@wdio/cli": "^9.21.1",
    "@wdio/jasmine-framework": "^9.21.0",
    "@wdio/local-runner": "^9.21.0",
    "@wdio/mocha-framework": "^9.21.0",
    "@wdio/spec-reporter": "^9.20.0",
    "appium": "^3.1.2",
    "appium-uiautomator2-driver": "^6.7.2",
    "dotenv": "^17.2.3",
    "jimp": "^0.16.13",
    "wdio-electron-service": "^9.2.1",
    "wdio-slack-service": "^2.0.9"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "javascript-obfuscator": "^4.1.1"
  }
}
